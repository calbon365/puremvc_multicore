package com.flashalchemy.pmvc.multicore.pureas3.appskeleton.view.components{		import flash.display.Sprite;	import flash.text.StyleSheet;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import com.flashalchemy.pmvc.multicore.pureas3.appskeleton.model.vo.SectionVO;		public class SectionView extends Sprite 	{		private var _sectionVO:SectionVO;		private var _css:StyleSheet;		private var _labelTextField:TextField;		private var _contentTextField:TextField;						public function SectionView( sectionVO:SectionVO, css:StyleSheet ) 		{			_sectionVO = sectionVO;			_css = css; 			_labelTextField = new TextField();			_labelTextField.autoSize = TextFieldAutoSize.LEFT;			_labelTextField.x = 20;			_labelTextField.y = 60;			_labelTextField.width = 350;			_labelTextField.wordWrap = false;			_labelTextField.multiline = false;			_labelTextField.styleSheet = _css;			_labelTextField.htmlText = '<p class="label">' + _sectionVO.label + '</p>';						_contentTextField = new TextField();			_contentTextField.autoSize = TextFieldAutoSize.LEFT;			_contentTextField.x = 20;			_contentTextField.y = 90;			_contentTextField.width = 350;			_contentTextField.wordWrap = true;			_contentTextField.multiline = true;			_contentTextField.styleSheet = _css;			_contentTextField.htmlText = _sectionVO.content;						addChild( _labelTextField );								addChild( _contentTextField );		}			}}